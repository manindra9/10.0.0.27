class schpack ($command_for_package, $time){

        exec { 'executing_using_AT':
        command => "echo '${command_for_package}' | at ${time}",
        path    => ['/usr/bin', '/usr/sbin',],
        }

        notify{"The task has been Scheduled!":}
}
